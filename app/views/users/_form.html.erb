<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
    </div>
  </div>
  </div>
  <div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
      <%= form_with(model: @user, local: true) do |form| %>
        <div class="input-group row mb-3">
          <%= form.label :username, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="input-group row mb-3">
          <%= form.label :email, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        
        <div class="input-group row mb-3">
          <%= form.label :password, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= form.submit "Sign Up", class: "btn btn-outline-dark btn-lg" %>
        </div>
        <div class="input-group justify-content-center mb-3">
          <%= link_to 'Cancel and go back to all articles', articles_path %>
        </div>
      <% end %>
   </div>
 </div>
</div>