<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
    </div>
  </div>
  </div>
  <div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: article, local: true) do |form| %>
        <div class="input-group row mb-3">
          <%= form.label :title, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="input-group row mb-3">
          <%= form.label :description, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= form.submit class: "btn btn-outline-dark btn-lg" %>
        </div>
        <div class="input-group justify-content-center mb-3">
          <%= link_to 'Cancel and go back to all articles', articles_path %>
        </div>
      <% end %>
   </div>
 </div>
</div>