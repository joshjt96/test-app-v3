<p id="notice"><%= notice %></p>

<h1 class="text-center mt-4">Articles</h1>

 <div class="text-center mt-4">
      <%= link_to "Create new article", new_article_path, class: "btn btn-success" %>
  </div>

<% @articles.each do |article| %>
<div class="row justify-content-center">
  <div class="col-8 mt-4">
 <div class="card text-center shadow mb-5 bg-white rounded">
    <div class="card-header font-italic">
      by <%= article.user.username %>
    </div>
    <div class="card-body">
      <h5 class="card-title fw-bold link-primary"><%= link_to article.title, article_path(article) %></h5>
      <p class="card-text"><%= truncate(article.description, length: 100) %></p>
      <%= link_to "Read", article_path(article), class: "btn btn-success" %>
      <%= link_to "Edit", edit_article_path(article), class: "btn btn-primary" %>
      <%= link_to "Delete", article_path(article), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
  <div class="card-footer text-muted">
    <small>Created <%= time_ago_in_words(article.created_at) %> ago,
    edited <%= time_ago_in_words(article.updated_at) %> ago</small>
  </div>
  </div>
  </div>
</div>
<% end %>